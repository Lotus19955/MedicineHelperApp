@using MedicineHelperApp.Models;
@model DoctorVisitModel

@{
    ViewData["Title"] = "Add visit to doctor";
    Layout = "_Layout";
}

<div>
    <h2 class="text-center">Add visit</h2>

    <form asp-controller="DoctorVisit" asp-action="Create" method="post" width="100%">
        <div class="mb-3">
            <label for="DateVisit" class="form-label">Date of visit:</label>
            <input asp-for="DateVisit" type="date" class="form-control" value="@DateTime.UtcNow" id="DateVisit" required />
            <span asp-validation-for="DateVisit" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="ClinicId" class="form-label">Clinic:</label>
            <select asp-for="ClinicId" asp-items="@Model.ClinicList"></select>
            <a class="btn btn-success" asp-controller="Clinic" asp-action="Create">Add clinic</a>
        </div>
        <div class="mb-3">
            <label for="DoctorId" class="form-label">Doctor:</label>
            <select asp-for="DoctorId" asp-items="@Model.DoctorList"></select>
            <a class="btn btn-success" asp-controller="DoctorVisit" asp-action="CreateDoctor">Add Doctor</a>
        </div>
        <div class="mb-3">
            <label for="PriceVisit" class="form-label">Visit price $:</label>
            <input asp-for="PriceVisit" type="number" class="form-control" id="PriceVisit" required />
            <span asp-validation-for="PriceVisit" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-success" value="Add" />
        <a class="btn btn-primary"  asp-controller="DoctorVisit" asp-action="Index">Back</a>
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
