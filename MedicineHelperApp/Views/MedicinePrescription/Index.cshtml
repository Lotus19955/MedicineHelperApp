@model IEnumerable<MedicineHelper.Core.DataTransferObjects.MedicinePrescriptionDto>

@{
    ViewData["Title"] = "Medicine prescription";
    Layout = "_layout";
}

<h2>Medicine prescription</h2>

<p>
        <a asp-action="Create">Add medicine prescription</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name of medicine
            </th>
            <th>
                Start of admission
            </th>
            <th>
                End of admission
            </th>
            <th>
                Medicine dose
            </th>
            <th>
                Medicine price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.MedicinesDto.NameOfMedicine, "ClinicDetailsPartialView", "Medicine", new { id = item.MedicinesDto.Id }, new { @class = "tempClass" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartOfAdmission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndOfAdmission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineDose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicinePrice)
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-controller="MedicinePrescription" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
