<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medicine Helper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicineHelperAppMVC.styles.css" asp-append-version="true" />
</head>
<body style="background-color:#DDFFF0">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #516BEB;">

            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">Medicine Helper</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item m-1">
                            <a class="nav-link active" asp-controller="Admin" asp-action="GetUsers">User</a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link active" asp-controller="Admin" asp-action="GetClinic">Clinic</a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link active" asp-controller="Admin" asp-action="GetMedicines">Medicine</a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link active" asp-controller="Account" asp-action="Exit">Exit</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="background-color:#DDFFF0">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="">
            &copy; 2022 - Medicine Helper - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

