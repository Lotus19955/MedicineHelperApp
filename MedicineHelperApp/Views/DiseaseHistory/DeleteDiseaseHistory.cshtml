@using MedicineHelperApp.Models;
@model DiseaseModel

@{
    ViewData["Title"] = "Delete disease history";
    Layout = "_Layout";
}

<div align="center">
    <h4>Confirm delete</h4>
</div>
<form align="center" asp-controller="DiseaseHistory" asp-action="DeleteDiseaseHistory" method="post" asp-route-id="@Model.Id">
    <div>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a class="btn btn-primary" role="button" asp-controller="DiseaseHistory" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}