@using MedicineHelper.Core.Enums;
@model DiseaseHistoryModel

@{
    ViewData["Title"] = "Add disease history";
    Layout = "_Layout";
}

<div>
    <h2>Add disease history</h2>

    <form asp-controller="DiseaseHistory" asp-action="Create" method="post">
        <div class="mb-3">
            <label for="DiseaseId" class="form-label">Disease name:</label>
            <select asp-for="DiseaseId" asp-items="@Model.DiseaseList"></select>
            <a asp-controller="DiseaseHistory" asp-action="CreateDisease">Add Disease</a>
        </div>
        <div class="mb-3">
            <label for="DateOfDisease" class="form-label">Date of disease:</label>
            <input asp-for="DateOfDisease" type="date" class="form-control" id="DateOfDisease" required />
            <span asp-validation-for="DateOfDisease" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="DateOfRecovery" class="form-label">Date of recovery:</label>
            <input asp-for="DateOfRecovery" type="date" class="form-control" id="DateOfRecovery" />
        </div>
        <div class="mb-3">
            <label for="FormOfTransferredDiseaseList" class="form-label">Severity of the illness:</label>
            <select asp-for="SeverityOfTheIllnessList" asp-items="Html.GetEnumSelectList<SeverityOfTheIllness>()"></select>
        </div>
        <div class="mb-3">
            <label for="TypeOfTreatment" class="form-check-label">Tupe of treatment:</label>
            <input asp-for="TypeOfTreatment" type="radio" class="form-check-input" id="Result" value="true" required />
            <span asp-validation-for="TypeOfTreatment">Stationary</span>
            <input asp-for="TypeOfTreatment" type="radio" checked="checked" class="form-check-input" id="Result" value="false" required />
            <span asp-validation-for="TypeOfTreatment">Outpatient</span>
        </div>
        <div>
            <input asp-for="AppointmentId" type="hidden" />
            <input asp-for="ReturnUrl" type="hidden" />
        </div>
        <input type="submit" class="btn btn-primary m-1" value="Add" />
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
