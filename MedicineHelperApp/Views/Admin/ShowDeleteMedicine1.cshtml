@model MedicineModel

@{
    ViewData["Title"] = "Админ";
    Layout = "_Adminlayout";
}
<div>
    <h4>Вы уверены, что хотите удалить лекарство?</h4>
    <p>@Model.NameOfMedicine</p>
</div>
<form asp-controller="Admin" asp-action="DeleteMedicine" method="post" asp-route-id="@Model.Id">
    <div></div>
    <input type="submit" class="btn btn-danger m-1" value="Удалить лекарство" />
    <a class="btn btn-outline-primary m-1" role="button" asp-controller="Admin" asp-action="GetMedicines">Отмена</a>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}