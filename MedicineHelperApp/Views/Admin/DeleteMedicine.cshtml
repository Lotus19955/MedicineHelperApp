@model MedicineModel

@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}
<div>
    <h4>Are you sure you want to remove the medicine?</h4>
    <p>@Model.NameOfMedicine</p>
</div>
<form asp-controller="Admin" asp-action="DeleteMedicine" method="post" asp-route-id="@Model.Id">
    <div></div>
    <input type="submit" class="btn btn-danger m-1" value="Delete medicine" />
    <a class="btn btn-primary m-1" role="button" asp-controller="Admin" asp-action="GetMedicines">Cancel</a>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}