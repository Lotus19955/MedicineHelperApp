@model UserModel

@{
    ViewData["Title"] = "Delete user";
    Layout = "_AdminLayout";
}
<div align="center">
    <h4>Are you sure you want to remove user?</h4>
    <h2 align="center">@Model.Email</h2>
</div>
<form align="center" asp-controller="Admin" asp-action="DeleteUser" method="post" asp-route-id="@Model.Id">
    <div>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a class="btn btn-primary m-1" role="button" asp-controller="Admin" asp-action="GetUsers">Cancel</a>
    </div>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}